<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SiteMap" verbose="1">
    <test name="Open Site Map">
        <groups>
            <run>
                <include name="positive"/>
            </run>
        </groups>
        <classes>
            <class name = "PageObject.MicrosoftTest">
                <methods>
                    <include name="testLogin"/>
                </methods>
            </class>
            <class name="PageObject.MicrosoftTest">
                <methods>
                    <include name="testSiteMap"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>